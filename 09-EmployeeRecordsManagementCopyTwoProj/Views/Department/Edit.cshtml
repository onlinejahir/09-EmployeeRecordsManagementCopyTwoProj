@model DepartmentViewModel

@{
    ViewData["Title"] = "Update department";
}

<div class="container">
    @if (ViewBag.Message != null)
    {
        <div>
            @ViewBag.Message
        </div>
    }
    <div class="row p-4">
        <div class="col-md-12">
            <h3>Update department</h3>
        </div>
    </div>
    <div class="row p-4">
        <div class="col-md-6">
            <form asp-controller="Department" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DepartmentId" />
                <div class="mb-3">
                    <label asp-for="DepartmentName" class="form-label fw-bold"></label>
                    <input asp-for="DepartmentName" type="text" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-dark">Update</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

